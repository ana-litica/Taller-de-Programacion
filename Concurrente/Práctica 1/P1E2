programa P1E2
procesos
  proceso acomodar(E pasos:numero)
  comenzar
    repetir pasos
      derecha
  fin
  proceso juntarPapeles(ES p:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      p:=p+1
  fin
areas
  area1:AreaP(10,10,10,29)
  area2:AreaP(10,30,29,30)
  area3:AreaP(30,11,30,30)
  area4:AreaP(11,10,30,10)
robots
  robot robot1
  variables
    p:numero
  comenzar
    p:=0
    repetir 19
      juntarPapeles(p)
      mover
    juntarPapeles(p)
    Informar(p)
  fin
  robot robot2
  variables
    p:numero
  comenzar
    p:=0
    derecha
    repetir 19
      juntarPapeles(p)
      mover
    juntarPapeles(p)
    Informar(p)
  fin
  robot robot3
  variables
    p:numero
  comenzar
    p:=0
    acomodar(2)
    repetir 19
      juntarPapeles(p)
      mover
    juntarPapeles(p)
    Informar(p)
  fin
  robot robot4
  variables
    p:numero
  comenzar
    p:=0
    acomodar(3)
    repetir 19
      juntarPapeles(p)
      mover
    juntarPapeles(p)
    Informar(p)
  fin
variables
  r1:robot1
  r2:robot2
  r3:robot3
  r4:robot4
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r2,area2)
  AsignarArea(r3,area3)
  AsignarArea(r4,area4)
  Iniciar(r1,10,10)
  Iniciar(r2,10,30)
  Iniciar(r3,30,30)
  Iniciar(r4,30,10)
fin