programa P1E1C
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso verificar(ES f:numero;ES vacias:numero)
  comenzar
    si(HayFlorEnLaEsquina)
      juntarFlores(f)
    sino
      vacias:=vacias+1
  fin
  proceso depositarFlores(E f:numero)
  comenzar
    repetir f
      depositarFlor
  fin
areas
  av1:AreaP(1,1,1,100)
  av3:AreaP(3,1,3,100)
  av5:AreaP(5,1,5,100)
robots
  robot florero
  variables
    f,vacias:numero
  comenzar
    f:=0
    vacias:=0
    repetir 99
      verificar(f,vacias)
      mover
    verificar(f,vacias)
    depositarFlores(f)
    Informar('Flores_recolectadas_',f)
    Informar('Esquinas_vacias_',vacias)
  fin
variables
  r1,r2,r3:florero
comenzar
  AsignarArea(r1,av1)
  AsignarArea(r2,av3)
  AsignarArea(r3,av5)
  Iniciar(r1,1,1)
  Iniciar(r2,3,1)
  Iniciar(r3,5,1)
fin