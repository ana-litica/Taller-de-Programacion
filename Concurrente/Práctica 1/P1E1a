programa P1E1A
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso verificar(ES f:numero;ES vacias:numero)
  comenzar
    si(HayFlorEnLaEsquina)
      juntarFlores(f)
    sino
      vacias:=vacias+1
  fin
  proceso depositarFlores(E f:numero)
  comenzar
    mientras(HayFlorEnLaBolsa)
      depositarFlor
  fin
areas
  avenida1:AreaP(1,1,1,100)
  avenida3:AreaP(3,1,3,100)
  avenida5:AreaP(5,1,5,100)
robots
  robot florero
  variables
    f,vacias:numero
  comenzar
    repetir 3
      f:=0
      vacias:=0
      repetir 99
        verificar(f,vacias)
        mover
      verificar(f,vacias)
      depositarFlores(f)
      Informar('Flores_recolectadas_',f)
      Informar('Esquinas_vacias_',vacias)
      si(PosAv<5)
        Pos(PosAv+2,1)
  fin
variables
  r:florero
comenzar
  AsignarArea(r,avenida1)
  AsignarArea(r,avenida3)
  AsignarArea(r,avenida5)
  Iniciar(r,1,1)
fin