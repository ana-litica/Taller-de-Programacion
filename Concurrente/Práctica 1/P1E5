programa P1E5
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso limpiarEsquinasFlores(ES f:numero; E pasos:numero)
  comenzar
    repetir pasos
      juntarFlores(f)
      mover
    juntarFlores(f)
  fin
  proceso juntarPapeles(ES p:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      p:=p+1
  fin
  proceso limpiarEsquinasPapeles(ES p:numero;E pasos:numero)
  comenzar
    repetir pasos
      juntarPapeles(p)
      mover
    juntarPapeles(p)
  fin
  proceso dejarFlores(E f:numero)
  comenzar 
    repetir f
      depositarFlor
  fin
  proceso dejarPapeles(E p:numero)
  comenzar
    repetir p
      depositarPapel
  fin
areas
  area1a:AreaP(1,75,15,75)
  area1b:AreaP(1,80,15,80)
  area2a:AreaP(75,80,75,100)
  area2b:AreaP(80,80,80,100)
  area3a:AreaP(70,10,100,10)
  area3b:AreaP(70,15,100,15)
  area4a:AreaP(10,1,10,10)
  area4b:AreaP(15,1,15,10)
robots
  robot florero
  variables
    f,pasos,avenida:numero
  comenzar
    derecha
    f:=0
    avenida:=PosAv
    si(avenida=1)
      pasos:=15
    sino
      pasos:=30
    limpiarEsquinasFlores(f,pasos-1)
    Pos(avenida,PosCa+5)
    limpiarEsquinasFlores(f,pasos-1)
    dejarFlores(f)
  fin
  robot papelero
  variables
    pasos,p,calle:numero
  comenzar
    p:=0
    calle:=PosCa
    si(calle=80)
      pasos:=20
    sino
      pasos:=10
    limpiarEsquinasPapeles(p,pasos-1)
    Pos(PosAv+5,calle)
    limpiarEsquinasPapeles(p,pasos-1)
    dejarPapeles(p)
  fin
variables
  r1,r3:florero
  r2,r4:papelero
comenzar
  AsignarArea(r1,area1a)
  AsignarArea(r1,area1b)
  AsignarArea(r2,area2a)
  AsignarArea(r2,area2b)
  AsignarArea(r3,area3a)
  AsignarArea(r3,area3b)
  AsignarArea(r4,area4a)
  AsignarArea(r4,area4b)
  Iniciar(r1,1,75)
  Iniciar(r2,75,80)
  Iniciar(r3,70,10)
  Iniciar(r4,10,1)
fin