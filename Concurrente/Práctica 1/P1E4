programa P1E4
procesos 
  proceso juntarFlores
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      toamrPapel
  fin
  proceso recorrerAvenidaFlores
  comenzar
    repetir 99
      juntarFlores
      mover
    juntarFlores
  fin
  proceso recorrerAvenidaPapeles
  comenzar
    repetir 99
      juntarPapeles
      mover
    juntarPapeles
  fin
  proceso recorrerAreaImpar
  comenzar
    repetir 24
      recorrerAvenidaFlores
      Pos(PosAv+1,1)
    recorrerAvenidaFlores
  fin
  proceso recorrerAreaPar
  comenzar
    repetir 24
      recorrerAvenidaPapeles
      Pos(PosAv+1,1)
    recorrerAvenidaPapeles
  fin
areas
  area1:AreaP(1,1,25,100)
  area2:AreaP(26,1,50,100)
  area3:AreaP(51,1,75,100)
  area4:AreaP(76,1,100,100)
robots
  robot florero 
  comenzar
    recorrerAreaImpar
    Pos(51,1)
    recorrerAreaImpar
  fin
  robot papelero
  comenzar
    recorrerAreaPar
    Pos(76,1)
    recorrerAreaPar
  fin
variables 
  f:florero
  p:papelero
comenzar
  AsignarArea(f,area1)
  AsignarArea(f,area3)
  AsignarArea(p,area2)
  AsignarArea(p,area4)
  Iniciar(f,1,1)
  Iniciar(p,26,1)
fin