programa Ej3a
procesos
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
areas
  av1:AreaP(1,1,1,100)
  av2:AreaP(2,1,2,100)
  av3:AreaP(3,1,3,100)
  esqC:AreaP(4,1,4,1)
robots
  robot papelero
  variables
    id:numero
    seguir:boolean
  comenzar
    RecibirMensaje(id,c) 
    mientras(PosCa<96)
      repetir 5
        juntarPapeles
        mover
      si(id=1)
        EnviarMensaje(V,r2)
        EnviarMensaje(V,r3)
        RecibirMensaje(seguir,*)
        RecibirMensaje(seguir,*)
      sino 
        si(id=2)
          EnviarMensaje(V,r1)
          EnviarMensaje(V,r3)         
          RecibirMensaje(seguir,*)
          RecibirMensaje(seguir,*)
        sino
          EnviarMensaje(V,r2)
          EnviarMensaje(V,r1)         
          RecibirMensaje(seguir,*)
          RecibirMensaje(seguir,*)
    repetir 4
      juntarPapeles
      mover
    si(id=1)
      EnviarMensaje(V,r2)
      EnviarMensaje(V,r3)
      RecibirMensaje(seguir,*)
      RecibirMensaje(seguir,*)
    sino 
      si(id=2)
        EnviarMensaje(V,r1)
        EnviarMensaje(V,r3)         
        RecibirMensaje(seguir,*)
        RecibirMensaje(seguir,*)
      sino
        EnviarMensaje(V,r2)
        EnviarMensaje(V,r1)         
        RecibirMensaje(seguir,*)
        RecibirMensaje(seguir,*)
  fin
  robot coordinador
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  r1,r2,r3:papelero
  c:coordinador
comenzar
  AsignarArea(r1,av1)
  AsignarArea(r2,av2)
  AsignarArea(r3,av3)
  AsignarArea(c,esqC)
  Iniciar(r1,1,1)
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
  Iniciar(c,4,1)
fin