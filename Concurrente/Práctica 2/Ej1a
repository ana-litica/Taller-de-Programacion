programa Ej1a
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso limpiarCalles(ES f:numero)
  comenzar
    f:=0
    repetir 9
      juntarFlores(f)
      mover
    juntarFlores(f)
  fin
areas
  area1:AreaP(1,1,1,10)
  area2:AreaP(2,11,2,20)
robots
  robot robot1
  variables
    f1,f2,dif:numero
  comenzar
    limpiarCalles(f1)
    EnviarMensaje(f1,r2)
    RecibirMensaje(f2,r2)
    si(f1>f2)
      dif:=f1-f2
      Informar('Diferencia_',dif)
  fin
  robot robot2
  variables
    f1,f2,dif:numero
  comenzar
    limpiarCalles(f2)
    EnviarMensaje(f2,r1)
    RecibirMensaje(f1,r1)
    si(f2>f1)
      dif:=f2-f1
      Informar('Diferencia_',dif)
  fin
variables
  r1:robot1
  r2:robot2
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r2,area2)
  Iniciar(r1,1,1)
  Iniciar(r2,2,11)
fin