programa Ej1b
procesos 
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso limpiarCalles(ES f:numero)
  comenzar
    f:=0
    repetir 9
      juntarFlores(f)
      mover
    juntarFlores(f)
  fin
  proceso diferencia(ES dif:numero;E f1:numero;E f2:numero)
  comenzar
    si(f1<f2)
      dif:=f2-f1
    sino
      dif:=f1-f2
  fin
areas
  area1:AreaP(1,1,1,10)
  area2:AreaP(2,11,2,20)
  areaF:AreaP(2,1,2,1)
robots
  robot competidor
  variables
    cod,f:numero
  comenzar
    RecibirMensaje(cod,fiscal)
    limpiarCalles(f)
    EnviarMensaje(cod,fiscal)
    EnviarMensaje(f,fiscal)
  fin
  robot fiscalizador
  variables
    f1,f2,dif,cod:numero
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    repetir 2
      RecibirMensaje(cod,*)
      si(cod=1)
        RecibirMensaje(f1,r1)
      sino
        RecibirMensaje(f2,r2)
    diferencia(dif,f1,f2)
    Informar('Diferencia_',dif)
  fin
variables
  r1,r2:competidor
  fiscal:fiscalizador
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r2,area2)
  AsignarArea(fiscal,areaF)
  Iniciar(r1,1,1)
  Iniciar(r2,2,11)
  Iniciar(fiscal,2,1)
fin