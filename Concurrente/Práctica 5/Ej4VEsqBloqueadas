programa E4
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso dejarFlores(E avenida:numero;E calle:numero;E f:numero)
  comenzar
    BloquearEsquina(10,10)
    Pos(10,10)
    repetir f
      depositarFlor
    Pos(avenida,calle)
    LiberarEsquina(10,10)
  fin
areas
  area1:AreaP(1,1,1,1)
  area2:AreaP(2,1,2,1)
  area3:AreaP(3,1,3,1)
  areaF:AreaP(4,1,4,1)
  cuadrante:AreaPC(40,40,60,60)
  deposito:AreaPC(10,10,10,10)
robots
  robot fiscalizador
  variables
    id,av,ca,f,aux:numero
    recibido:boolean
  comenzar
    f:=0
    repetir 8
      Random(id,1,3)
      Random(av,40,60)
      Random(ca,40,60)
      si(id=1)
        EnviarMensaje(av,r1)
        EnviarMensaje(ca,r1)
      sino
        si(id=2)
          EnviarMensaje(av,r2)
          EnviarMensaje(ca,r2)
        sino
          EnviarMensaje(av,r3)
          EnviarMensaje(ca,r3)
      RecibirMensaje(recibido,*)
    EnviarMensaje(0,r1)
    EnviarMensaje(0,r2)
    EnviarMensaje(0,r3)
    repetir 3
      RecibirMensaje(aux,*)
      f:=f+aux
    Informar(f)
  fin
  robot florero
  variables
    avInicial,caInicial,f,av,ca:numero
  comenzar
    avInicial:=PosAv
    caInicial:=PosCa
    f:=0
    RecibirMensaje(av,fiscal)
    mientras(av<>0)
      RecibirMensaje(ca,fiscal)
      EnviarMensaje(V,fiscal)
      BloquearEsquina(av,ca)
      Pos(av,ca)
      juntarFlores(f)
      Pos(avInicial,caInicial)
      LiberarEsquina(av,ca)
      RecibirMensaje(av,fiscal)
    dejarFlores(PosAv,PosCa,f)
    EnviarMensaje(f,fiscal)
  fin
variables
  r1,r2,r3:florero
  fiscal:fiscalizador
comenzar
  AsignarArea(fiscal,areaF)
  AsignarArea(r1,area1)
  AsignarArea(r1,cuadrante)
  AsignarArea(r1,deposito)
  AsignarArea(r2,area2)
  AsignarArea(r2,cuadrante)
  AsignarArea(r2,deposito)
  AsignarArea(r3,area3)
  AsignarArea(r3,cuadrante)
  AsignarArea(r3,deposito)
  Iniciar(fiscal,4,1)
  Iniciar(r1,1,1)  
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin