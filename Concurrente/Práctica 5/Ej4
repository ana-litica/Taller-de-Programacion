programa Ej4
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
  fin
  proceso dejarFlores(E f:numero)
  comenzar
    repetir f
      depositarFlor
  fin
areas
  cuadrante:AreaPC(40,40,60,60)
  esq1:AreaP(1,1,1,1)
  esq2:AreaP(2,1,2,1)
  esq3:AreaP(3,1,3,1)
  esqF:AreaP(4,1,4,1)
  deposito:AreaPC(10,10,10,10)
robots
  robot fiscalizador
  variables
    av,ca,id,f,aux:numero
  comenzar
    f:=0
    repetir 8
      Random(av,40,60)
      Random(ca,40,60)
      Random(id,1,3)
      si(id=1)
        EnviarMensaje(av,r1)
        EnviarMensaje(ca,r1)
      sino
        si(id=2)
          EnviarMensaje(av,r2)
          EnviarMensaje(ca,r2)
        sino
          EnviarMensaje(av,r3)
          EnviarMensaje(ca,r3)
      RecibirMensaje(aux,*)
      f:=f+aux
    EnviarMensaje(0,r1)
    EnviarMensaje(0,r2)
    EnviarMensaje(0,r3)
    Informar('Flores_recolectadas_',f)
  fin
  robot florero
  variables
    avI,caI,f,avenida,calle:numero
  comenzar
    avI:=PosAv
    caI:=PosCa
    RecibirMensaje(avenida,fiscal)
    mientras(avenida<>0)
      RecibirMensaje(calle,fiscal)
      Pos(avenida,calle)
      juntarFlores(f)
      Pos(10,10)
      dejarFlores(f)
      Pos(avI,caI)
      EnviarMensaje(f,fiscal)
      f:=0
      RecibirMensaje(avenida,fiscal)
  fin
variables
  r1,r2,r3:florero
  fiscal:fiscalizador
comenzar
  AsignarArea(fiscal,esqF)
  AsignarArea(r1,cuadrante)
  AsignarArea(r1,esq1)
  AsignarArea(r2,cuadrante)
  AsignarArea(r2,esq2)
  AsignarArea(r3,cuadrante)
  AsignarArea(r3,esq3)
  AsignarArea(r1,deposito)
  AsignarArea(r2,deposito)
  AsignarArea(r3,deposito)
  Iniciar(fiscal,4,1)
  Iniciar(r1,1,1)  
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin